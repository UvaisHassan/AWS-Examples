{
  "name": "AWS Learning Environment",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "hashicorp.terraform",
        "esbenp.prettier-vscode",
        "kddejong.vscode-cfn-lint"
      ]
    }
  },
  "postCreateCommand": "echo 'DevContainer setup complete!'",
  "runArgs": [
    "--env-file",
    ".env"
  ]
}